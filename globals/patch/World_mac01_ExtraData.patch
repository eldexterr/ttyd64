% Clear all data from `$Data_ShopInventory_CurrentPage`
#export:Function $Function_Inventory_ClearPageData
{
    PUSH    A0, A1, A2
    LIO     A0, $Data_ShopInventory_CurrentPage
    ADDIU   A1, R0, 1
    .Loop
    SW      R0, 0 (A0)
    SW      R0, 4 (A0)
    SW      R0, 8 (A0)
    SW      R0, C (A0)
    ADDIU   A0, A0, 10
